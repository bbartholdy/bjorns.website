	doi = {10.5281/zenodo.7649151},
	keywords = {dental calculus, LC-MS/MS, tobacco, caffeine, alkaloids, dental pathology, sinusitis},
	file = {Zenodo Full Text PDF:/home/bjorn/Zotero/storage/D797YZHQ/Bartholdy et al. - 2023 - Multiproxy analysis exploring patterns of diet and.pdf:application/pdf},
}
