	author = {Bartholdy, Bjørn Peare and Hasselstrøm, Jørgen B. and Sørensen, Lambert K. and Casna, Maia and Hoogland, Menno and Beemster, Historisch Genootschap and Henry, Amanda G.},
	month = feb,
